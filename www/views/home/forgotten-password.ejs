<% include ../partials/header %>
  
<section class="screen">
  <div class="container">
    <div class="screen-head">
      <img src="/img/logo-1800flowers.png" alt="1800flowers Logo"/>
      <h4>Reset Password</h4>
      <p>Enter your email address and we will send you a link to reset your password.</p>
    </div>
    <div class="error-message">
      <div class="error-message-container">
        <p class="error"><strong>Not Recognized</strong></p>
        <p>Username and/or email<br>not recognized.</p>
      </div>
    </div>
    <form method="POST">
      <div class="form-group">
        <div class="form-row">
          <input type="email" name="email" id="email" placeholder="email address" required />
        </div>
        <div class="form-row">
          <input type="text" name="username" id="username" placeholder="username" required />
        </div>
        <div class="form-row">
          <button class="btn green" type="submit">Reset Password</button>
        </div>
      </div>
        <input type="hidden" name="state" value="<%= state %>" />
        <input type="hidden" name="client_id" value="<%= client_id  %>" />
        <input type="hidden" name="response_type" value="<%= response_type %>" />
    </form>
    <div class="forgotten-create">
      <a href="/">Back to Sign In</a>
      <a href="/create">Create an Account</a>
    </div>
  </div>
</section>
<div class="legal-container">
  <p><a href="<%= url('/terms-of-use')%>">Terms of Use</a><a href="<%= url('/privacy-policy')%>">Privacy Policy</a></p>
</div>

<% include ../partials/footer %>
