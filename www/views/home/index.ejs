<% include ../partials/header %>

  <section class="screen login">
    <div class="container">
      <div class="screen-head">
        <img src="/img/logo-starbucks.png" alt="Starbucks Logo"/>
        <h4>Sign In To Your<br>Starbucks Account</h4>
        <p>Welcome to the Starbucks skill for your Amazon Echo. Simple reorders of your last Starbucks Mobile Order &amp; Pay purchase are just a few steps away.</p>
        <p>Before you ask Alexa to reorder, you will need to sign in and connect your Starbucks account to your Amazon Echo.</p>
      </div>
    </div>
    <div class="error-message <%= badPassword ? 'has-error' : '' %>">
      <div class="error-message-container">
        <p class="error"><strong>Sign In Error</strong></p>
        <p>Please check your sign-in<br>information and try again</p>
      </div>
    </div>
    <form method="POST">
      <div class="form-group">
        <div class="form-row">
          <input type="text" name="username" id="username" placeholder="username" required />
        </div>
        <div class="form-row">
          <input type="password" name="password" id="password" placeholder="password" required />
        </div>
        <input type="hidden" name="state" value="<%= state %>" />
        <input type="hidden" name="client_id" value="<%= client_id  %>" />
        <input type="hidden" name="response_type" value="<%= response_type %>" />
        <div class="form-row btn-row">
          <button class="btn gold" type="submit">Sign In</button>
          <a class="btn cancel close" href="javascript:window.close()">Cancel</a>
        </div>
      </div>
    </form>
    <div class="container">
      <a class="gold center" href="<%= url('/no-account')%>">I do not have a Starbucks account.</a>
      <div class="forgotten">
        <p>Forgot your <a href="<%= url('/forgotten-username')%>">Username</a> or <a href="<%= url('/forgotten-password')%>">Password</a>?</p>
      </div>
      <div class="legal-container">
        <p><a href="<%= url('/terms-of-use')%>">Terms of Use</a>â€¢<a href="<%= url('/privacy-policy')%>">Privacy Policy</a></p>
      </div>
    </div>
  </section>

<% include ../partials/footer %>
