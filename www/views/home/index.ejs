<% include ../partials/header %>

  <section class="screen login">
    <div class="container">
      <div class="screen-head">
        <img src="/img/logo-1800flowers.png" alt="1800flowers Logo"/>
        <h4>Account Sign In</h4>
      </div>
      <div class="error-message <%= badPassword ? 'has-error' : '' %>">
        <div class="error-message-container">
          <p class="red">Please check your sign-in<br>information and try again</p>
        </div>
      </div>
      <form method="POST">
        <div class="form-group">
          <div class="form-row">
            <input type="text" name="email" id="email-address" placeholder="Email Address" required />
          </div>
          <div class="form-row">
            <input type="password" name="password" id="password" placeholder="Password" required />
          </div>
          <input type="hidden" name="state" value="<%= state %>" />
          <input type="hidden" name="client_id" value="<%= client_id  %>" />
          <input type="hidden" name="response_type" value="<%= response_type %>" />
          <div class="form-row">
            <button class="btn green" type="submit" onclick="ga('send','event','Linking','Login Attempted')">Sign In</button>
          </div>
        </div>
      </form>
      <div class="forgotten-create">
        <a href="/forgotten-password">Forgotten Password</a>
        <a href="/create">Create an Account</a>
      </div>
    </div>
  </section>
  <div class="legal-container">
    <p><a href="<%= url('/terms-of-use')%>">Terms of Use</a><a href="<%= url('/privacy-policy')%>">Privacy Policy</a></p>
  </div>

<% include ../partials/footer %>
